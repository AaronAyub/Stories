{{! The header / navigation bar shown at the top of every page}}
<nav class="light-green" role="navigation">
    <div class="nav-wrapper container">
        <a href="/" class="brand-logo left">Stories App</a>
        <ul id="noDropdown" class="right">
            {{>navMenus}}
        </ul>
        <a id="dropdownTrigger" class="right dropdown-trigger" data-target="dropdown">
            <i class="material-icons noSelect">menu</i></a>
        <ul id='dropdown' class='dropdown-content'>
            {{>navMenus}}
        </ul>
    </div>
</nav>

<script>
    document.addEventListener('DOMContentLoaded', function(){
        var elems = document.querySelectorAll('.dropdown-trigger');
        var instances = M.Dropdown.init(elems,{coverTrigger:false,constrainWidth:false});
    });
</script>