<div class="section">
    <form method="post">
        <div class="input field">
            <label for="title">Title: </label>
            <input placeholder="Story Title" name="title" id="title" required data-length="10">
        </div>
        <div class="input field">
            <label for="desc">Description: </label>
            <input placeholder="Add a brief description of your story. (Max length of 512 characters)" name="desc" id="desc">
        </div>
        <div class="input field">
            <label for="content">Story Content: </label>
            <textarea class="materialize-textarea" placeholder="Write the story here!" name="content" id="content"></textarea>
        </div>
        <button class="btn light-green" name="submit">Create New Story</button>
    </form>
</div>