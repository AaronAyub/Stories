<div class="section">
    <center><h3>You Favourites</h3></center>
    {{#unless stories}}
    <center>You don't have any favourite stories yet. Click the <i class="material-icons">favorite_border</i> when reading a story to add it to your favourites. The icon will then appear like this: <i class="material-icons favourite">favorite</i></center>
    {{else}}
    <table class="striped highlight">
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Brief</th>
            <th>Rating</th>
        </tr>
        {{#each stories}}
            <tr>
                <td><a href="/read/{{this.id}}">{{this.title}}</a></td>
                <td><a href="/user/{{this.username}}">{{this.username}}</a></td>
                <td>{{this.brief}}</td>
                <td>{{this.rating}}</td>
            </tr>
        {{/each}}
    </table>
    {{/unless}}
</div>